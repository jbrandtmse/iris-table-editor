{
  "name": "iris-table-editor",
  "displayName": "IRIS Table Editor",
  "description": "Excel-like grid editing for InterSystems IRIS database tables",
  "version": "0.1.1",
  "publisher": "intersystems-community",
  "repository": {
    "type": "git",
    "url": "https://github.com/jbrandtmse/iris-table-editor.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "intersystems-community.servermanager"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "iris-table-editor",
          "title": "IRIS Table Editor",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "iris-table-editor": [
        {
          "type": "webview",
          "id": "iris-table-editor.mainView",
          "name": "IRIS Table Editor"
        }
      ]
    },
    "commands": [
      {
        "command": "iris-table-editor.openTableEditor",
        "title": "IRIS Table Editor: Open Table Editor"
      }
    ],
    "configuration": {
      "title": "IRIS Table Editor",
      "properties": {
        "iris-table-editor.connectionTimeout": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 120,
          "description": "Connection timeout in seconds. How long to wait when testing a server connection before giving up."
        },
        "iris-table-editor.apiTimeout": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 300,
          "description": "API operation timeout in seconds. How long to wait for query, update, insert, and delete operations."
        }
      }
    }
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.js && npm run stage-webview",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "stage-webview": "node stage-webview.js",
    "check-types": "tsc --noEmit",
    "compile-tests": "tsc -p . --outDir out",
    "pretest": "npm run compile && npm run compile-tests && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "vscode:prepublish": "npm run package && npm run stage-webview"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all2": "^8.0.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "@intersystems-community/intersystems-servermanager": "^3.10.2",
    "@iris-te/core": "*",
    "@iris-te/webview": "*",
    "@vscode/codicons": "^0.0.44",
    "exceljs": "^4.4.0"
  }
}
