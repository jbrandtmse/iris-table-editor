{
  "name": "iris-table-editor-root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "compile": "npm run compile --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspace=packages/vscode && npm run test --workspace=packages/desktop",
    "watch": "npm run watch --workspace=packages/vscode",
    "package": "npm run package --workspace=packages/vscode",
    "start:desktop": "npm run start --workspace=packages/desktop"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
