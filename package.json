{
  "name": "iris-table-editor-root",
  "version": "0.2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "compile": "npm run compile --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspace=packages/core && npm run test --workspace=packages/vscode && npm run test --workspace=packages/desktop && npm run test --workspace=packages/web",
    "watch": "npm run watch --workspace=packages/vscode",
    "package": "npm run package --workspace=packages/vscode",
    "start:desktop": "npm run start --workspace=packages/desktop",
    "start:web": "npm run dev --workspace=@iris-te/web",
    "dist:desktop": "npm run compile && npm run dist --workspace=packages/desktop",
    "version:sync": "node scripts/sync-version.js"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
